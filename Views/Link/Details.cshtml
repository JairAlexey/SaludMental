@model Link
@{
    ViewData["Title"] = "Visualizar Link";
}

<div class="text-center">
    <h1 class="display-4">VISUALIZAR LINK</h1>

    <form class="col-sm-4 mx-auto my-auto" method="post">


        <div class="form-group mb-5">
            <label for="text">Titulo</label>
            <input asp-for="linkVideo" class="form-control mt-2 placeholder-black" placeholder="Ingrese un Link" readonly>
        </div>

        <div class="form-group mb-5">
            <a asp-action="index" class="btn btn-warning">Volver</a>
        </div>

    </form>

</div>

@model Usuarios
@{
    ViewData["Title"] = "Página de Inicio de Sesión";
    Layout = null;
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/css/login/style.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <div class="login-container">
        <div class="login-info-container">
            <div class="back-button-container">
                <a asp-area="" asp-controller="Home" asp-action="PaginaInicio" class="btnBack">
                    <img src="~/img/login/back.png" alt="Regresar" />
                </a>
            </div>
            <h1 class="title">Iniciar sesión</h1>
            <form asp-action="Login" method="post" class="inputs-container">
                <input asp-for="Correo" class="input" type="text" placeholder="Correo">
                <input asp-for="Password" class="input" type="password" placeholder="Contraseña">
                <button type="submit" class="btn">Iniciar Sesión</button>
                <p>¿No tienes cuenta? <span class="span">Registrarse</span></p>
            </form>
        </div>
        <img class="image-container" src="~/img/login/login.svg" alt="Login">
    </div>

</body>
</html>

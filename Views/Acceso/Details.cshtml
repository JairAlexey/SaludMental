@model Usuarios
@{
    ViewData["Title"] = "Visualizar Usuario";
}

<div class="text-center">
    <h1 class="display-4">VISUALIZAR USUARIO</h1>

    <form class="col-sm-4 mx-auto my-auto" method="post">

        <div class="form-group mb-5">
            <label for="exampleInputEmail1">Correo</label>
            <input asp-for="Correo" class="form-control mt-2 placeholder-black" placeholder="Ingrese una direccion de correo">
        </div>

        <div class="form-group mb-5">
            <label for="exampleInputEmail1">Clave</label>
            <input asp-for="Password" class="form-control mt-2 placeholder-black" placeholder="*******">
        </div>

        <div class="form-group mb-5">
            <a asp-action="index" class="btn btn-warning">Volver</a>
        </div>

    </form>

</div>

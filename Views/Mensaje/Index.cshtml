@model List<Mensaje>;

@{
    ViewData["Title"] = "Inicio Mensaje";
    var mensajes = Model;
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<h1 class="display-4">LISTA MENSAJES</h1>

<button type="button" class="btn btn-dark mb-3" onclick="location.href='@Url.Action("Create", "Mensaje")'">Crear</button>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">IdMensaje</th>
            <th scope="col">Nombre</th>
            <th scope="col">Correo</th>
            <th scope="col">Telefono</th>
            <th scope="col">Mensaje</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mensaje in mensajes)
        {
            <tr>
                <td>@mensaje.IdMensaje</td>
                <td>@mensaje.Nombre</td>
                <td>@mensaje.Correo</td>
                <td>@mensaje.Telefono</td>
                <td>@mensaje.MensajeUsuario</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-action="Details" asp-route-IdMensaje="@mensaje.IdMensaje" class="btn btn-primary me-2"><i class="bi bi-eye-fill"></i></a>
                        <a asp-action="Edit" asp-route-IdMensaje="@mensaje.IdMensaje" class="btn btn-warning me-2"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-route-IdMensaje="@mensaje.IdMensaje" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
